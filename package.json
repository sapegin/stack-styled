{
  "name": "stack-styled",
  "version": "0.0.0-development",
  "description": "Stacking layouts for React",
  "author": {
    "name": "Artem Sapegin",
    "url": "https://sapegin.me"
  },
  "homepage": "https://github.com/sapegin/stack-styled",
  "repository": "sapegin/stack-styled",
  "license": "MIT",
  "engines": {
    "node": ">=8.6"
  },
  "browserslist": [
    ">1%",
    "last 1 version",
    "Firefox ESR",
    "not dead"
  ],
  "main": "lib/Stack.js",
  "browser": "esm/Stack.js",
  "types": "types/Stack.d.ts",
  "files": [
    "lib",
    "esm",
    "emotion",
    "types"
  ],
  "scripts": {
    "pretest": "npm run lint && npm run typecheck",
    "test": "npm run test:jest",
    "posttest": "npm run format",
    "typecheck": "tsc --noEmit",
    "styleguide": "styleguidist server",
    "styleguide:build": "styleguidist build",
    "start": "styleguidist server",
    "build": "npm run build:esm && npm run build:cjs && npm run build:emotion && npm run build:types",
    "build:esm": "babel --delete-dir-on-start --ignore '**/*.spec.js' --extensions '.tsx' -d esm/ src/",
    "build:cjs": "babel --delete-dir-on-start --ignore '**/*.spec.js' --extensions '.tsx' --env-name cjs -d lib/ src/",
    "build:emotion": "babel --delete-dir-on-start --ignore '**/*.spec.js' --extensions '.tsx' --env-name emotion -d emotion/ src/",
    "build:types": "tsc --emitDeclarationOnly",
    "prepublishOnly": "npm run build",
    "lint": "eslint . --cache --fix --ext .js,.tsx",
    "test:jest": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "format": "prettier --write '**/*.{js,tsx,md}'"
  },
  "keywords": [
    "white",
    "space",
    "whitespace",
    "margin",
    "padding",
    "grid",
    "stack",
    "layout",
    "react",
    "component",
    "components",
    "styled-system",
    "styled-components",
    "emotion",
    "design-system",
    "css-in-js"
  ],
  "dependencies": {
    "@styled-system/prop-types": "^5.1.5",
    "@types/styled-system": "^5.1.10",
    "styled-system": "^5.1.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@emotion/core": "^10.0.35",
    "@emotion/styled": "^10.0.27",
    "@testing-library/react": "^9.5.0",
    "@types/jest": "^24.9.1",
    "@types/styled-components": "^5.1.3",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-transform-rename-import": "^2.3.0",
    "eslint": "^6.8.0",
    "eslint-config-tamia": "^7.2.5",
    "eslint-plugin-react": "^7.20.6",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "jest-styled-components": "^7.0.3",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "react": "^16.13.1",
    "react-docgen-typescript": "^1.20.4",
    "react-dom": "^16.13.1",
    "react-styleguidist": "^13.0.0",
    "styled-components": "^5.2.0",
    "typescript": "^3.9.7",
    "webpack": "^4.44.1"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/types/",
      "<rootDir>/lib/",
      "<rootDir>/esm/",
      "<rootDir>/emotion/"
    ]
  },
  "lint-staged": {
    "*.{js,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
